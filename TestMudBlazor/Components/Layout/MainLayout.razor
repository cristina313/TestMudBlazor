@using TestMudBlazor.Contracts
@inherits LayoutComponentBase
@inject MessageLogService logService;

@* Required *@
<MudThemeProvider />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />


<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        My Application
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        @Body
       @*  <MudGrid Justify="Justify.Center">
            <MudItem xs="2" Style="background-color: aqua; height: calc(90vh - var(--mud-appbar-height));"></MudItem>
            <MudItem xs="8" Style="background-color: green; height: calc(90vh - var(--mud-appbar-height));">@Body</MudItem>
            <MudItem xs="2" Style="background-color: aqua; height: calc(90vh - var(--mud-appbar-height));"></MudItem>
            <MudItem xs="12" Style="background-color: yellow; height: 10vh;"> </MudItem>
        </MudGrid> *@

       
    </MudMainContent>
</MudLayout>

@code {

    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    private void SaveLogs(Exception exception)
    {
        logService.AddMessageLog(exception.Message);
    }
}